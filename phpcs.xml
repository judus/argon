<?xml version="1.0"?>
<ruleset name="MaduserStandard">
    <description>Maduser's project coding standard</description>

    <!-- Define the coding standard -->
    <rule ref="PSR12"/>

    <!-- Specify the directories to check -->
    <file>src/</file>
    <file>tests/</file>

    <!-- Ignore specific files or directories -->
    <exclude-pattern>*/tests/resources/cache/*</exclude-pattern>

    <!-- Add any file extensions to include (optional) -->
    <extensions>
        <extension name="php"/>
    </extensions>
</ruleset>
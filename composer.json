{
  "name": "maduser/argon",
  "description": "A lightweight PHP framework for wiring up applications using a service container approach.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Julien Duseyau",
      "email": "julien.duseyau@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Maduser\\Argon\\": "src/",
      "Maduser\\Argon\\Mocks\\": "mocks/",
      "Maduser\\Console\\": "../datastore-app/maduser/Console/",
      "Maduser\\FileSystem\\": "../datastore-app/maduser/FileSystem/",
      "Maduser\\DataStore\\": "../datastore-app/maduser/DataStore/",
      "Maduser\\Support\\": "../datastore-app/maduser/Support/"
    }
  },
  "require": {
    "php": ">=8.2",
    "illuminate/database": "^11.23"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "vimeo/psalm": "^5.26.1",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\App\\": "tests/app/",
      "Tests\\Mocks\\": "tests/assets/mocks/",
      "Tests\\Unit\\": "tests/unit/",
      "Tests\\Integration\\": "tests/integration/",
      "Tests\\Environment\\": "tests/environment/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check": [
      "@test",
      "./vendor/bin/psalm",
      "./vendor/bin/phpcs --standard=PSR12 src/"
    ],
    "fix": [
      "@test",
      "./vendor/bin/psalm --alter --issues=MissingReturnType,MissingParamType,InvalidReturnType,InvalidParamType,MissingPropertyType,MissingClosureReturnType,InvalidPropertyType,NullableReturnType",
      "./vendor/bin/phpcbf --standard=PSR12 src/",
      "@test"
    ],
    "watch": "find src/ | entr -r composer check",
    "watch-fix": "find src/ | entr -r composer fix"
  }
}

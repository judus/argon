{
  "name": "maduser/argon",
  "description": "A high-performance, modular, PSR-11 compliant dependency injection container for PHP.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Julien Duseyau",
      "email": "julien.duseyau@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "nette/php-generator": "^4.2",
    "psr/container": "^2.0"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
    "phpunit/phpunit": "^11.5",
    "slevomat/coding-standard": "^8.24",
    "squizlabs/php_codesniffer": "^4.0",
    "vimeo/psalm": "^6.13"
  },
  "autoload": {
    "psr-4": {
      "Maduser\\Argon\\": "src/"
    },
    "files": [
      "autoload/override-attribute.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Mocks\\": "tests/resources/mocks/",
      "Tests\\Unit\\": "tests/unit/",
      "Tests\\Integration\\": "tests/integration/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test:coverage": "vendor/bin/phpunit  --coverage-clover=coverage.xml --coverage-html coverage-report && open coverage-report/index.html",
    "phpcs": "vendor/bin/phpcs --standard=phpcs.xml",
    "psalm": "vendor/bin/psalm --output-format=github",
    "phpcs:fix": "vendor/bin/phpcbf --standard=phpcs.xml",
    "check": ["@test", "@psalm", "@phpcs:fix", "@phpcs"],
    "ci": ["@test", "@test:coverage", "@psalm", "@phpcs"]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}

<?xml version="1.0"?>
<psalm
        errorLevel="1"
        resolveFromConfigFile="true"
        totallyTyped="true"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
        xsi:noNamespaceSchemaLocation="vendor/vimeo/psalm/config.xsd"

        findUnusedBaselineEntry="true"
        findUnusedCode="true"
>
    <!-- Project files and directories -->
    <projectFiles>
        <directory name="src"/>
        <directory name="tests"/>
        <ignoreFiles>
            <directory name="vendor"/>
            <directory name="tests/resources/cache"/>
            <directory name="tests/unit/Container/Mocks"/>
        </ignoreFiles>
    </projectFiles>

    <!-- Issue handlers -->
    <issueHandlers>
        <DeprecatedMethod errorLevel="error"/>
        <DeprecatedClass errorLevel="error"/>
        <PossiblyUnusedMethod errorLevel="info">
            <errorLevel type="suppress">
                <directory name="tests"/>
                <!-- Method setStore is only used in the compiled container -->
                <file name="src/Contracts/ParameterStoreInterface.php"/>
            </errorLevel>
        </PossiblyUnusedMethod>
        <UnusedClass>
            <errorLevel type="suppress">
                <directory name="tests"/>
            </errorLevel>
        </UnusedClass>
        <UndefinedClass>
            <errorLevel type="suppress">
                <directory name="tests"/>
            </errorLevel>
        </UndefinedClass>
        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
                <directory name="tests"/>
            </errorLevel>
        </PropertyNotSetInConstructor>
        <MixedArgument>
            <errorLevel type="suppress">
                <directory name="tests"/>
            </errorLevel>
        </MixedArgument>
        <MixedAssignment>
            <errorLevel type="suppress">
                <directory name="tests"/>
            </errorLevel>
        </MixedAssignment>
        <MixedMethodCall>
            <errorLevel type="suppress">
                <directory name="tests"/>
            </errorLevel>
        </MixedMethodCall>
        <PossiblyUnusedProperty>
            <errorLevel type="suppress">
                <directory name="tests"/>
            </errorLevel>
        </PossiblyUnusedProperty>
        <MixedArrayAccess>
            <errorLevel type="suppress">
                <directory name="tests"/>
            </errorLevel>
        </MixedArrayAccess>
        <UnusedParam>
            <errorLevel type="suppress">
                <directory name="tests/integration/Mocks"/>
            </errorLevel>
        </UnusedParam>
    </issueHandlers>
</psalm>
